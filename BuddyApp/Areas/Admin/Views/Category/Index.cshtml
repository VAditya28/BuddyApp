@model List<Category>

	<div class="container-fluid">
	<div class="card pb-2 mt-4 shadow" style="max-width: 50rem;">
		<div class="card-header text-center text-light bg-primary ">
			<h1> Category List</h1>
		</div>
		<div class="card-body">

			<div class="container-fluid align-content-lg-center ">

				<div class="col-md-12 text-end">
					<a asp-action="Create" class="btn btn-primary">
						<i class="bi bi-plus-square"></i> Create Category
					</a>
					<a asp-action="Index" asp-area="Customer" asp-controller="Home" class="btn btn-primary">
						<i class="bi bi-house-door">Home</i>
					</a>
				</div>

			</div>
			<table class="table table-hover">
				<thead>
					<tr>
						<th>
							Category Name
						</th>
						<th>
							Display Order
						</th>

						<th>
							Other Options
						</th>

					</tr>
				</thead>
				<tbody class="table-bordered">
					@foreach (var obj in Model.OrderBy(u => u.DisplayOrder))
					{
						<tr>
							<td>
								@obj.Name
							</td>
							<td>
								@obj.DisplayOrder
							</td>
							<td>
								<div class="align-content-md-center" role="group">

									<a asp-area="Admin" asp-controller="Category" asp-action="Edit" asp-route-id="@obj.category_Id" class="btn btn-secondary">
										<i class="bi bi-pencil-square"></i> Edit
									</a>

									<a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.category_Id" class="btn btn-danger">
										<i class="bi bi-trash"></i> Delete
									</a>



								</div>

							</td>

						</tr>

					}
				</tbody>

			</table>
		</div>
	</div>

	</div>











